#!/bin/bash

linux_detect_ascii () {
    ascii=
    pstree --help 2>&1 | grep -q -- '-A .*ASCII' && ascii=-A
}

linux_pstree () {
    LANG=C pstree $ascii -p "$@"
}

linux_iterate () {
    opts=( )
    while [ -n "$1" ]; do
        case "$1" in
            -*)
                opts=( "${opts[@]}" "$1" )
                shift
                ;;
            *)
                break
                ;;
        esac
    done

    if [ $# = 0 ]; then
        linux_pstree "${opts[@]}"
    elif [ -d "/proc/$1" ]; then
        linux_pstree "${opts[@]}" "$@"
    else
        for proc in "$@"; do
            echo "Searching for processes containing '$proc' ..."
            for pid in `pgrep -f "$proc"`; do
                #echo "Tree for pid $pid:"
                linux_pstree "${opts[@]}" "$pid"
            done
        done
    fi
}

case "$OSTYPE" in
    solaris*)
        exec ptree "$@" | less -rS
        ;;
    *)
        if ! which pstree 2>&1 >/dev/null; then
            echo "pstree not found."
            exit 1
        fi

        linux_detect_ascii

        linux_iterate "$@" | less -rSFX
        ;;
esac

